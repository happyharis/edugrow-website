---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";

const resources = [
  {
    title: "Automation Blueprint",
    description: "My education business went from struggling to 7 figures using these exact tools.",
    image: "/automation-blueprint.jpg",
    link: "https://edu8.org/automation-blueprint-form",
  },
];
---

<Layout title="Resources">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Resources</Fragment>
      <Fragment slot="desc">
        Access guides, tools, and strategies to grow your business effectively.
      </Fragment>
    </Sectionhead>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mt-12">
      {resources.map((resource) => (
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
          <a href={resource.link} target="_blank" rel="noopener noreferrer" class="block">
            <img src={resource.image} alt={resource.title} class="w-full h-48 object-cover" />
          </a>
          <div class="p-4">
            <a href={resource.link} target="_blank" rel="noopener noreferrer" class="block">
              <h3 class="text-xl font-bold mb-2">{resource.title}</h3>
            </a>
            <p class="text-gray-600">{resource.description}</p>
          </div>
        </div>
      ))}
    </div>
  </Container>
</Layout>
