---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";

const resources = [
  {
    title: "How to Scale Your Business",
    description: "A detailed guide to help you scale efficiently with actionable steps.",
    image: "/scale-your-business.jpg",
    link: "/resources/scale-your-business",
  },
  {
    title: "Effective Marketing Strategies",
    description: "Proven strategies to grow your audience and increase revenue.",
    image: "/marketing-strategies.jpg",
    link: "/resources/marketing-strategies",
  },
  {
    title: "Automation Tools for Businesses",
    description: "Discover the top tools to automate your workflows and save time.",
    image: "/automation-tools.jpg",
    link: "/resources/automation-tools",
  },
  {
    title: "Leadership Essentials",
    description: "Key leadership skills and techniques to drive your team to success.",
    image: "/leadership-essentials.jpg",
    link: "/resources/leadership-essentials",
  },
];
---

<Layout title="Resources">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Resources</Fragment>
      <Fragment slot="desc">
        Access guides, tools, and strategies to grow your business effectively.
      </Fragment>
    </Sectionhead>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mt-12">
      {resources.map((resource) => (
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
          <a href={resource.link} class="block">
            <img src={resource.image} alt={resource.title} class="w-full h-48 object-cover" />
          </a>
          <div class="p-4">
            <a href={resource.link} class="block">
              <h3 class="text-xl font-bold mb-2">{resource.title}</h3>
            </a>
            <p class="text-gray-600">{resource.description}</p>
          </div>
        </div>
      ))}
    </div>
  </Container>
</Layout>
