---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import Accordion from "@components/accordion.astro";
import Testimonials from "@components/testimonials.astro";

const coach = {
  name: "Haris Samingan",
  credentials: [
    "ex-Google Developer Expert",
    "Scaled previous education business from 6 to 7 figures",
    "Hired and managed a team of 10+ employees (including part-time & full time teachers)",
    "Taught for 7 years in universities and schools such as NTU, SMU, ACS(I)",
    "Averaged 9/10 ratings from 1000+ feedbacks",
    "Has Educational YouTube channel with 1,000,000 views & 19,000 subs ",
  ],
  image: {
    src: "/haris.jpg",
    alt: "Haris Samingan - Education Business Growth Specialist",
    fallback: "/haris.jpg",
  },
};

const coachingOffer = {
  title: "1-on-1 Coaching Programme",
  description: `Transform your education business with personalized guidance.`,
};

const faq = [
  {
    question: "Who is eligible to apply?",
    answer:
      "Anyone who is working full-time on their business and is coachable.",
  },
  {
    question: "What does 'coachable' mean?",
    answer:
      "It means you are open to feedback, willing to try new strategies, and committed to following through on the advice provided.",
  },
  {
    question: "How can this programme help my tuition or education business?",
    answer:
      "Our tailored framework will help you identify areas for growth, set priorities, and implement strategies to streamline operations.",
  },
  {
    question:
      "I don't have time to attend long sessions. Will this still work for me?",
    answer:
      "Yes! Our sessions are concise and action-oriented, designed to fit into your busy schedule while delivering maximum value.",
  },
  {
    question:
      "I've tried coaching before, and it didn't work. How is this different?",
    answer:
      "This programme focuses on actionable steps and measurable results. Plus, we understand the unique challenges of the education sector, ensuring a more relevant and impactful experience.",
  },
  {
    question: "What if I don't see immediate results?",
    answer:
      "Business growth takes time, but our framework ensures you're making progress in the right direction. You'll also gain insights and strategies that can drive long-term success.",
  },
];

const painPoints = [
  {
    title: "Stuck in your business and not growing?",
    description:
      "You've hit a plateau in revenue, student numbers aren't increasing, and you're working harder but seeing diminishing returns.",
    icon: "sad",
  },
  {
    title: "Don't know what to do next?",
    description:
      "Overwhelmed by too many options, conflicting advice, and uncertainty about which direction will actually move your business forward.",
    icon: "sad",
  },
  {
    title: "Generic advice doesn't work?",
    description:
      "Tired of one-size-fits-all solutions that don't account for your unique business situation and specific challenges.",
    icon: "sad",
  },
];
const framework = [
  {
    step: "Audit",
    description:
      "We'll audit your business and identify the current growth constraint",
    number: 1,
  },
  {
    step: "Apply",
    description: "We will work alongside you to solve the constraint.",
    number: 2,
  },
  {
    step: "Grow",
    description:
      "Watch your education business transform into the business you dreamed of running.",
    number: 3,
  },
];

const eligibilityCriteria = [
  {
    title: "Commit to 4 bi-weekly 1 hour sessions",
    description:
      "Be ready to attend focused 1-on-1 coaching sessions every two weeks for transformative results",
    icon: "calendar",
  },
  {
    title: "Working on your business full-time",
    description:
      "This program is designed for educators who are fully committed to growing their education business",
    icon: "briefcase",
  },
  {
    title: "Coachable and ready to implement",
    description:
      "Open to feedback, willing to try new approaches, and committed to taking action on recommendations",
    icon: "check",
  },
];
---

<Layout title="Coaching Programme">
  <Container>
    <Sectionhead>
      <Fragment slot="title">{coachingOffer.title}</Fragment>
      <Fragment slot="desc">{coachingOffer.description}</Fragment>
    </Sectionhead>

    <main class="mt-16">
      <!-- Pain Points Section -->
      <section class="mb-12">
        <h2 class="text-2xl font-semibold mb-6">Are You...</h2>
        <div class="space-y-6">
          {
            painPoints.map((point) => (
              <div class="flex items-start space-x-4">
                <div class="w-8 h-8 flex-shrink-0">
                  {point.icon === "sad" && (
                    <svg
                      class="w-full h-full text-blue-500"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24">
                      <circle cx="12" cy="12" r="10" stroke-width="2" />
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M16 16s-1.5-2-4-2-4 2-4 2"
                      />
                      <line
                        x1="9"
                        y1="9"
                        x2="9.01"
                        y2="9"
                        stroke-width="3"
                        stroke-linecap="round"
                      />
                      <line
                        x1="15"
                        y1="9"
                        x2="15.01"
                        y2="9"
                        stroke-width="3"
                        stroke-linecap="round"
                      />
                    </svg>
                  )}
                </div>
                <div>
                  <h3 class="font-medium mb-2">{point.title}</h3>
                  <p class="text-gray-600">{point.description}</p>
                </div>
              </div>
            ))
          }
        </div>
      </section>
      <!-- Framework Section with Pointers -->
      <section class="mb-12 bg-gray-50 p-8 rounded-lg">
        <h2 class="text-2xl font-semibold mb-6">How we can help</h2>
        <div class="space-y-6">
          {
            framework.map((item) => (
              <div class="flex items-start space-x-4">
                <div class="w-8 h-8 flex-shrink-0 bg-blue-500 rounded-full text-white flex items-center justify-center font-semibold">
                  {item.number}
                </div>
                <div>
                  <h3 class="font-medium mb-2">{item.step}</h3>
                  <p class="text-gray-600">{item.description}</p>
                </div>
              </div>
            ))
          }
        </div>
      </section>

      <!-- Coach Section with Image -->
      <section class="mb-12 bg-gray-50 p-8 rounded-lg">
        <div class="flex flex-col md:flex-row items-start gap-8">
          <div class="flex-1">
            <h2 class="text-2xl font-semibold mb-4">Your Coach</h2>
            <h3 class="text-xl font-medium mb-2">{coach.name}</h3>
            <ul class="space-y-2">
              {
                coach.credentials.map((credential) => (
                  <li class="flex items-center">
                    <svg
                      class="w-5 h-5 mr-2 text-green-500"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24">
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M5 13l4 4L19 7"
                      />
                    </svg>
                    {credential}
                  </li>
                ))
              }
            </ul>
          </div>
          <div class="md:w-1/3 aspect-square rounded-lg overflow-hidden">
            <img
              src="/haris.jpg"
              alt="Haris Samingan"
              class="w-full h-full object-cover rounded-lg shadow-lg"
            />
          </div>
        </div>
      </section>

      <Testimonials />

      <!-- Apply Now Section -->
      <section class="mb-12 bg-gray-50 p-8 rounded-lg">
        <h2 class="text-2xl font-semibold mb-6">Apply Now If You...</h2>
        <div class="space-y-6">
          {
            eligibilityCriteria.map((criteria) => (
              <div class="flex items-start space-x-4">
                <div class="w-8 h-8 flex-shrink-0">
                  {criteria.icon === "calendar" && (
                    <svg
                      class="w-full h-full text-green-500"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24">
                      <rect
                        x="3"
                        y="4"
                        width="18"
                        height="18"
                        rx="2"
                        ry="2"
                        stroke-width="2"
                      />
                      <line x1="16" y1="2" x2="16" y2="6" stroke-width="2" />
                      <line x1="8" y1="2" x2="8" y2="6" stroke-width="2" />
                      <line x1="3" y1="10" x2="21" y2="10" stroke-width="2" />
                    </svg>
                  )}
                  {criteria.icon === "briefcase" && (
                    <svg
                      class="w-full h-full text-green-500"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24">
                      <rect
                        x="2"
                        y="7"
                        width="20"
                        height="14"
                        rx="2"
                        ry="2"
                        stroke-width="2"
                      />
                      <path
                        d="M16 7V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v2"
                        stroke-width="2"
                      />
                    </svg>
                  )}
                  {criteria.icon === "check" && (
                    <svg
                      class="w-full h-full text-green-500"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24">
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                      />
                    </svg>
                  )}
                </div>
                <div>
                  <h3 class="font-medium mb-2">{criteria.title}</h3>
                  <p class="text-gray-600">{criteria.description}</p>
                </div>
              </div>
            ))
          }
        </div>

        <div class="mt-8 text-center">
          <a
            href="https://edu8.org/coaching-form"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-block bg-black text-white py-3 px-8 rounded-lg hover:bg-gray-800 transition-colors">
            Apply Now
          </a>
        </div>
      </section>

      <section class="mt-16">
        <h2 class="text-2xl mb-4 font-semibold">Frequently Asked Questions</h2>
        <Accordion items={faq} />
      </section>
    </main>
  </Container>
</Layout>
