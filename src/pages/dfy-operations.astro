---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import { Icon } from "astro-icon/components";
import TestimonialsSnapshot from "@components/testimonials-snapshot.astro";

const painPoints = [
  {
    title: "Drowning in Day-to-Day Operations?",
    description:
      "You're spending more time managing than teaching or growing your business.",
    icon: "lucide:clock",
  },
  {
    title: "Struggling with Team Management?",
    description:
      "Hiring, training, and retaining quality teachers feels like a constant challenge.",
    icon: "lucide:users",
  },
  {
    title: "Systems Are a Mess?",
    description:
      "Student records, attendance, and billing are becoming harder to track as you grow.",
    icon: "lucide:settings",
  },
];

const solutions = [
  {
    title: "Complete Operations Setup",
    features: [
      "Student Management System Implementation",
      "Attendance & Progress Tracking",
      "Automated Billing System",
      "Parent Communication Workflows",
    ],
    icon: "lucide:settings",
  },
  {
    title: "Team Management Framework",
    features: [
      "Teacher Hiring & Onboarding Process",
      "Performance Review System",
      "Training Materials & Guidelines",
      "Team Communication Protocols",
    ],
    icon: "lucide:users",
  },
  {
    title: "Growth Support",
    features: [
      "Marketing Automation Setup",
      "Lead Management System",
      "Sales Process Implementation",
      "Growth Strategy Consultation",
    ],
    icon: "lucide:trending-up",
  },
];

const doneForYouOperationsPackage = {
  title: "Done For You Operations Package",
  price: "10,000",
  valuePrice: "25,000",
  features: [
    {
      name: "Complete Systems Setup & Implementation",
      worth: 8000,
    },
    {
      name: "3 Months of Implementation Support",
      worth: 6000,
    },
    {
      name: "Weekly Progress Meetings",
      worth: 3600,
    },
    {
      name: "Team Training Sessions",
      worth: 2400,
    },
    {
      name: "SOPs & Documentation",
      worth: 2000,
    },
    {
      name: "Lifetime Access to Templates",
      worth: 1500,
    },
    {
      name: "Priority Email Support",
      worth: 1000,
    },
    {
      name: "BONUS: 6 Months Pro Group Membership",
      worth: 800,
      isBonus: true,
    },
  ],
};
---

<Layout title="Done For You Operations">
  <Container>
    <div class="max-w-4xl mx-auto py-12">
      <div class="text-center mb-16">
        <h1 class="text-4xl font-bold mb-6">
          Ready to Transform Your Education Business Operations?
        </h1>
        <p class="text-xl text-gray-600">
          Let us handle your systems and operations while you focus on growth
        </p>
        <div class="mt-8 inline-block bg-gray-50 p-4 rounded-lg">
          <p class="font-medium text-gray-800">
            This service is for education businesses that:
          </p>
          <div class="mt-2 text-left space-y-2">
            <div class="flex items-center gap-2 text-gray-600">
              <Icon name="lucide:check-circle" class="w-5 h-5 text-green-500" />
              <span>Generate at least $250,000 in annual revenue</span>
            </div>
            <div class="flex items-center gap-2 text-gray-600">
              <Icon name="lucide:check-circle" class="w-5 h-5 text-green-500" />
              <span>Have a team of teachers, admin staff, or both</span>
            </div>
            <div class="flex items-center gap-2 text-gray-600">
              <Icon name="lucide:check-circle" class="w-5 h-5 text-green-500" />
              <span>Ready to implement professional systems & processes</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Pain Points -->
      <section class="mb-16">
        <h2 class="text-2xl font-semibold mb-8">Sound Familiar?</h2>
        <div class="grid md:grid-cols-3 gap-8">
          {
            painPoints.map((point) => (
              <div class="bg-white p-6 rounded-lg shadow-md">
                <div class="w-12 h-12 bg-blue-50 rounded-full flex items-center justify-center mb-4">
                  <Icon name={point.icon} class="w-6 h-6 text-blue-500" />
                </div>
                <h3 class="font-semibold mb-2">{point.title}</h3>
                <p class="text-gray-600">{point.description}</p>
              </div>
            ))
          }
        </div>
      </section>

      <!-- Solutions -->
      <section class="mb-16">
        <h2 class="text-2xl font-semibold mb-8">What We'll Set Up For You</h2>
        <div class="grid md:grid-cols-3 gap-8">
          {
            solutions.map((solution) => (
              <div class="bg-white p-6 rounded-lg shadow-md">
                <div class="w-12 h-12 bg-blue-50 rounded-full flex items-center justify-center mb-4">
                  <Icon name={solution.icon} class="w-6 h-6 text-blue-500" />
                </div>
                <h3 class="font-semibold mb-4">{solution.title}</h3>
                <ul class="space-y-2">
                  {solution.features.map((feature) => (
                    <li class="flex items-start space-x-2">
                      <Icon
                        name="lucide:check"
                        class="w-5 h-5 text-green-500 mt-0.5"
                      />
                      <span class="text-gray-600">{feature}</span>
                    </li>
                  ))}
                </ul>
              </div>
            ))
          }
        </div>
      </section>

      <!-- Testimonial -->
      <TestimonialsSnapshot id={[1]} />

      <!-- Package -->
      <section class="mb-16">
        <div class="bg-white rounded-lg shadow-lg p-8 border-2 border-blue-500">
          <div class="text-center mb-8">
            <h3 class="text-2xl font-bold mb-2">
              {doneForYouOperationsPackage.title}
            </h3>
            <p class="text-gray-400 line-through text-sm mb-1">
              Value: ${doneForYouOperationsPackage.valuePrice}
            </p>
            <p class="text-3xl font-bold text-blue-600">
              ${doneForYouOperationsPackage.price}
            </p>
            <p class="text-gray-600 mt-2">
              One-time Investment for Lifetime Systems
            </p>
          </div>

          <div class="grid md:grid-cols-2 gap-6 mb-8">
            {
              doneForYouOperationsPackage.features.map((feature) => (
                <div class="flex items-center space-x-3">
                  <Icon name="lucide:check" class="w-5 h-5 text-green-500" />
                  <span
                    class={feature.isBonus ? "text-blue-600 font-medium" : ""}>
                    {feature.name}
                    {feature.worth && (
                      <span class="text-sm text-gray-500 ml-1">
                        (worth ${feature.worth.toLocaleString()})
                      </span>
                    )}
                  </span>
                </div>
              ))
            }
          </div>

          <p class="text-center text-sm text-gray-600 mb-8">
            <Icon name="lucide:info" class="w-4 h-4 inline-block mr-1" />
            ROI typically achieved within 3-6 months through improved operations
            & growth
          </p>

          <div class="text-center">
            <a
              href="https://buy.stripe.com/9AQcP94f38Mcfx66ou"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-block px-8 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
              Get Started
            </a>
            <p class="text-sm text-red-500 mt-2">
              <Icon name="lucide:clock" class="w-4 h-4 inline-block mr-1" />
              Limited to 5 clients per quarter
            </p>
          </div>
        </div>
      </section>

      <!-- FAQ -->
      <section class="mb-16">
        <h2 class="text-2xl font-semibold mb-8">Common Questions</h2>
        <div class="space-y-6">
          <div>
            <h3 class="font-semibold mb-2">
              How long does implementation take?
            </h3>
            <p class="text-gray-600">
              Typically 4-6 weeks for initial setup, followed by 3 months of
              support to ensure smooth operations.
            </p>
          </div>
          <div>
            <h3 class="font-semibold mb-2">
              What if I already have some systems in place?
            </h3>
            <p class="text-gray-600">
              We'll assess your current setup and integrate or upgrade existing
              systems as needed.
            </p>
          </div>
          <div>
            <h3 class="font-semibold mb-2">Will you train my team?</h3>
            <p class="text-gray-600">
              Yes, we provide comprehensive training for your team on all
              implemented systems and processes.
            </p>
          </div>
        </div>
      </section>
    </div>
  </Container>
</Layout>
