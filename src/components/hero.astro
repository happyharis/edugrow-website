---
import { Picture } from "astro:assets";
import heroImage from "assets/hero.png";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon/components";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 hidden md:block">
    <Picture
      src={heroImage}
      alt="people on a bean stalk"
      widths={[200, 400, 600]}
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      Do you want to scale your tuition and education business?
    </h1>

    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      Learn from the team that has scaled businesses to 7 figures in annual
      revenue
    </p>

    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="#"
        class="ml-onclick-form"
        onclick="ml('show', 'r90qdu', true)">
        GET MY PERSONALISED ROADMAP
      </Link>
    </div>
  </div>
</main>
